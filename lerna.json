{
  "version": "0.3.6",
  "command": {
    "bootstrap": {
      "hoist": false
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/tests/**"
      ],
      "message": "chore(package): release %s",
      "signGitCommit": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
